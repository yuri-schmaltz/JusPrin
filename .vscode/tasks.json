{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Build",
            "type": "cmake",
            "command": "build",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build the entire project using CMake"
        },
        {
            "label": "CMake: Clean",
            "type": "shell",
            "command": "cmake --build build --target clean",
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "CMake: Test",
            "type": "shell",
            "command": "ctest --test-dir build --output-on-failure",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "bash ./build_linux.sh -s",
            "group": "build",
            "problemMatcher": "$gcc"
        }
    ]
}
